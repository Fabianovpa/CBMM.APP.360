<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"   
             xmlns:local="clr-namespace:CBMM.APP._360;assembly=CBMM.APP._360"
             x:Class="CBMM.APP._360.Pages.LoginPage"             
             >
    <ContentPage.Content>
        <ScrollView BackgroundColor="White">
            <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Image x:Name="iLogo" Source="cbmm_logo.jpg" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" WidthRequest="200" HeightRequest="200"/>
                <StackLayout Grid.Row="1" Padding="40" Spacing="20" Orientation="Vertical" >

                    <Entry x:Name="Email" Placeholder="EMAIL" ></Entry>
                    <Entry x:Name="Password" Placeholder="SENHA"></Entry>
                    <Button x:Name="bEnter" Text="ENTRAR"  Clicked="bEnter_Clicked" ></Button>
                    
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>