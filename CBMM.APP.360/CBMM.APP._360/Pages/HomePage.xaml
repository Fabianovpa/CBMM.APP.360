<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CBMM.APP._360.Pages.HomePage">
    <StackLayout VerticalOptions="Center">
        <Label Text="CBMM 360" TextColor="Blue"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               FontSize="Large"/>
        <Image Source="cbmm_logo.jpg" Aspect="AspectFit" />
        <Label Text="Para começar faça download de seus videos clicando no no botão abaixo, logo em seguida os videos e fotos estarão disponiveis em sua galeria." TextColor="Black"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               FontSize="Medium"/>
        <Button x:Name="btnDownload" Text="Download" Clicked="btnDownload_Clicked"></Button>
    </StackLayout>
</ContentPage>